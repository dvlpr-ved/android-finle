    <style name="AlertDialogStyle" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppViewShadow" parent="Theme.ESavari">
        <item name="android:shadowColor">?colorOnSurfaceVariant</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
