    <style name="TextViewAppGuideHead" parent="AppFontBold">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="TextViewSplashHead" parent="TextViewAppGuideHead">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:shadowColor">?colorOnBackground</item>
