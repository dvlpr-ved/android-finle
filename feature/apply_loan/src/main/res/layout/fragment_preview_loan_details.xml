                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Number:" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{loanResponse.bankDetails.accountNumber}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Name:" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{loanResponse.bankDetails.bankName}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Address:" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{loanResponse.bankDetails.bankAddress}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IFSC Code:" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{loanResponse.bankDetails.ifscCode}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
                    </TableRow>

                    <!-- Loan Details -->
                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="Loan details :" />

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loan Request Amount:" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{loanResponse.loanDetail.loanRequestAmt}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
                    </TableRow>
                </TableLayout>


                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:text="Do you want to proceed?" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonNotOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="?colorError"
                        android:text="Not Ok"
                        android:textColor="?colorOnError" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Ok" />


                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>