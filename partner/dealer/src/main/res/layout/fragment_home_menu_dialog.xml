<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="dialogs.HomeMenuDialogFragment">

    <data>

    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/horizontal_large"
            android:paddingTop="@dimen/vertical_large"
            android:paddingEnd="@dimen/horizontal_large"
            android:paddingBottom="@dimen/vertical_large">

            <View
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/xx_large"
                android:background="?colorOutline" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cardTerms"
                style="@style/AccountOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_terms_of_services" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cardPrivacy"
                style="@style/AccountOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_privacy_policy" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cardSwitch"
                style="@style/AccountOptionNoNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_switch"
                android:text="@string/text_switch_partner" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cardLogout"
                style="@style/AccountOptionNoNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/xx_large"
                android:drawableStart="@drawable/ic_logout"
                android:text="@string/text_logout" />
        </LinearLayout>

</layout>